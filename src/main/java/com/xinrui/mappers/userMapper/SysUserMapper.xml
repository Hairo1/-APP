<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xinrui.mappers.userMapper.SysUserMapper">
    <cache type="com.xinrui.util.RedisCache"/>
    <select id="getAllUser" resultType="SysUsers">
        SELECT
          `user_id`,
          `user_name`,
          `user_pwd`
        FROM
          `xinrui_db`.`sysusers`

    </select>
    <insert id="addUser" parameterType="SysUsers">
        INSERT INTO `xinrui_db`.`sysusers` (
          `user_name`,
          `user_pwd`
        )
        VALUES
          (
            #{user_name},
            #{user_pwd}
          ) ;
    </insert>
</mapper>
